<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">


	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>message_fr</value>
			</list>
		</property>
	</bean>

	<!-- Default View Resolver -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<context:annotation-config />

	<bean class="org.springframework.web.portlet.mvc.annotation.DefaultAnnotationHandlerMapping" />

	<context:component-scan base-package="fr.toutatice.application.portail.ficheApplication" />

	<bean id="placeholderConfigMetier"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:///${PORTAL_PROP_FILE}</value>
			</list>
		</property>
	</bean>

	<bean id="habilitation" class="fr.toutatice.application.portail.ficheApplication.Habilitation" scope="prototype">
		<property name="roleAdministrateur" value="${ficheApplication.roleAdministrateur}" />
	</bean>
	
</beans>
