<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>toutatice-portail.cms</groupId>
	<artifactId>cms-parent</artifactId>
	<version>1.0.24-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>toutatice-portail-cms</name>


	<properties>
    		<nuxeo.automation.version>5.4.2</nuxeo.automation.version>	

		<deploy.dir>${toutatice-portail-runtime-dir}</deploy.dir>
		<deploy.socle.dir>${toutatice-portail-runtime-dir}/jbossas/server/production/deploy/socle</deploy.socle.dir>
		<deploy.socle-libs.dir>${toutatice-portail-runtime-dir}/jbossas/server/production/lib</deploy.socle-libs.dir>
 		

		<portlet-api.version>2.0</portlet-api.version>
		<servlet-api.version>2.4</servlet-api.version>

		<commons-logging.version>1.1.1</commons-logging.version>
		<junit.version>3.8.1</junit.version>

		<jboss.portal.version>2.7.2</jboss.portal.version>
		<jboss.modules.identity.version>1.0.8.GA</jboss.modules.identity.version>
		<jboss.version>4.2.3.GA</jboss.version>

		<toutatice.core.version>1.0.24</toutatice.core.version>


	</properties>
	


	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>${junit.version}</version>
				<scope>test</scope>
			</dependency>	
		</dependencies>
	</dependencyManagement>


	<dependencies>
		<dependency>
			<groupId>javax.portlet</groupId>
			<artifactId>portlet-api</artifactId>
			<version>${portlet-api.version}</version>
			<scope>provided</scope>
		</dependency>
	
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>${servlet-api.version}</version>
			<scope>provided</scope>
		</dependency>   
    
	
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>provided</scope>
		</dependency>
		

	 	<dependency>
			<groupId>toutatice-portail.core</groupId>
	     		<artifactId>toutatice-portail-api</artifactId>
	     		<version>${toutatice.core.version}</version>
	     		<scope>provided</scope>
		</dependency>

  	 	<dependency>
			<groupId>toutatice-portail.core</groupId>
	     		<artifactId>toutatice-portail-custom-lib-utils</artifactId>
	     		<version>${toutatice.core.version}</version>
	     		<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-system</artifactId>
			<version>${jboss.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-jmx</artifactId>
			<version>${jboss.version}</version>
			<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>org.jboss.portal</groupId>
			<artifactId>portal-api-lib</artifactId>
			<version>${jboss.portal.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.portal</groupId>
			<artifactId>portal-core-lib</artifactId>
			<version>${jboss.portal.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.portal</groupId>
			<artifactId>portal-common-lib</artifactId>
			<version>${jboss.portal.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.portal.identity</groupId>
			<artifactId>identity-identity</artifactId>
			<version>${jboss.modules.identity.version}</version>
			<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>org.jboss.portal</groupId> 
			<artifactId>portal-server-lib</artifactId>
			<version>${jboss.portal.version}</version>
			<scope>provided</scope>
		</dependency>


		<dependency>
			<groupId>org.nuxeo.ecm.automation</groupId>
			<artifactId>nuxeo-automation-client</artifactId>
			<version>${nuxeo.automation.version}</version>
      			<scope>provided</scope>			
 		</dependency>

				
	</dependencies>

	<modules>
	    <module>toutatice-portail-cms-nuxeo-shared-lib</module>
	   <module>toutatice-portail-cms-nuxeo-lib</module>
	   <module>toutatice-portail-cms-nuxeo-web</module>
	   <module>toutatice-portail-cms-nuxeo-sar</module>
	   <module>toutatice-portail-cms-nuxeo-automation-client</module>

	</modules>

	<build>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<encoding>UTF-8</encoding>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jboss-packaging-maven-plugin</artifactId>
					<version>2.1.1</version>
					<extensions>true</extensions>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-resources-plugin</artifactId>
					<configuration>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
				
     				 <plugin>
        				<groupId>org.apache.maven.plugins</groupId>
       					 <artifactId>maven-antrun-plugin</artifactId>
        				<version>1.3</version>
      				</plugin>
				
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.2.1</version>
				 	<configuration>
						<!--<tagBase>http://eqpor.in.ac-rennes.fr/repos/toutatice-portail/test/tags/</tagBase>-->
						<tagBase>http://projet.toutatice.fr/repos/toutatice-portail/cms/tags</tagBase>
						<useReleaseProfile>false</useReleaseProfile>
						<preparationGoals>clean install</preparationGoals>
						<goals>deploy</goals>
						<arguments>-Prelease</arguments>
				      	</configuration>
				</plugin>

			</plugins>			

	</build>

 	<scm>
    		<developerConnection>scm:svn:http://projet.toutatice.fr/repos/toutatice-portail/cms/branches/1.0</developerConnection>
  	</scm>


 <distributionManagement>
     <repository>
          <id>toutatice-releases</id>
          <url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-releases</url>
     </repository>
     <snapshotRepository>
          <id>toutatice-snapshots</id>
          <url>http://projet.toutatice.fr/nexus/content/repositories/toutatice-snapshots</url>
     </snapshotRepository>
 </distributionManagement>
		
</project>

