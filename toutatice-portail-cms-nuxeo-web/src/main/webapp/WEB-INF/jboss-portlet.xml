<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE portlet-app PUBLIC "-//JBoss Portal//DTD JBoss Portlet 2.6//EN" "http://www.jboss.org/portal/dtd/jboss-portlet_2_6.dtd">

<portlet-app>

    <!-- Document -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-viewDocumentPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>
        
        <header-content>
            <link rel="stylesheet" href="/css/document.min.css" />
            
            <!-- Flaticon -->
            <link rel="stylesheet" href="/css/flaticon.min.css" />
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- List -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-viewListPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>
        
        <header-content>
            <!-- Flaticon -->
            <link rel="stylesheet" href="/css/flaticon.min.css" />
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>
    

    <!-- Drafts List -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-viewDraftsListPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>
    

    <!-- Portal site navigation -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-portalSiteNavigationPortlet</portlet-name>

        <ajax>
            <partial-refresh>false</partial-refresh>
        </ajax>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Menu -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-publishMenuPortlet</portlet-name>

        <ajax>
            <partial-refresh>false</partial-refresh>
        </ajax>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <header-content>
            <link rel="stylesheet" href="/css/publish-menu.min.css" />
        
            <!-- Drag & drop + Fancytree functions -->
            <script type="text/javascript" src="/js/publish-menu.min.js"></script>
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- File browser -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-fileBrowserPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <header-content>
            <link rel="stylesheet" href="/css/file-browser.min.css" />
            
            <!-- Flaticon -->
            <link rel="stylesheet" href="/css/flaticon.min.css" />
            
            <!-- Drag & drop -->
            <script type="text/javascript" src="/js/file-browser.min.js"></script>

            <!-- jQuery File Upload -->
            <script type="text/javascript" src="/components/jquery-file-upload-9.12.3/js/jquery.fileupload.js" />
            <script type="text/javascript" src="/components/jquery-file-upload-9.12.3/js/jquery.fileupload-process.js" />
            <script type="text/javascript" src="/components/jquery-file-upload-9.12.3/js/jquery.fileupload-ui.js" />
            <script type="text/javascript" src="/components/jquery-file-upload-9.12.3/js/jquery.fileupload-validate.js" />
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Search -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-searchPortlet</portlet-name>

        <ajax>
            <partial-refresh>true</partial-refresh>
        </ajax>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>
        
        <header-content>
            <script type="text/javascript" src="/js/search.min.js"></script>
        </header-content>

        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Fragment -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-viewFragmentPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>
        
        <header-content>
            <!-- Flaticon -->
            <link rel="stylesheet" href="/css/flaticon.min.css" />
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Keywords selector -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-keywordsSelectorPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <header-content>
            <link rel="stylesheet" href="/css/selector.min.css" />
            
            <script type="text/javascript" src="/js/selectors.js"></script>
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Date selector -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-dateSelectorPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <header-content>
            <link rel="stylesheet" href="/css/selector.min.css" />
            
            <script type="text/javascript" src="/js/selectors.js"></script>
            
            <!-- JQuery UI (Datepicker) -->
            <script type="text/javascript" src="/js/datepicker-integration.js"></script>
        </header-content>
        
        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>


    <!-- Vocabulary selector -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-vocabSelectorPortlet</portlet-name>

        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <header-content>
            <link rel="stylesheet" href="/css/selector.min.css" />
            
            <script type="text/javascript" src="/js/selectors.js"></script>
        </header-content>

        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>
    
    
    <!-- Vocabulary Select2 -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-vocabulary-select2</portlet-name>
        
        <transaction>
            <trans-attribute>Required</trans-attribute>
        </transaction>

        <portlet-info>
            <icon>
                <small-icon>/img/portlet_icon.png</small-icon>
                <large-icon>/img/portlet_icon.png</large-icon>
            </icon>
        </portlet-info>
    </portlet>
    
    
    <!-- Move document -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-move</portlet-name>
    </portlet>
    
    
    <!-- Rename document -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-rename</portlet-name>
    </portlet>
    
    
    <!-- Reorder documents -->
    <portlet>
        <portlet-name>toutatice-portail-cms-nuxeo-reorder</portlet-name>
        
        <header-content>
            <script type="text/javascript" src="/js/reorder.min.js"></script>
        </header-content>
    </portlet>


    <!-- Customization modules repository -->
    <service>
        <service-name>CustomizationModulesRepository</service-name>
        <service-class>org.osivia.portal.api.customization.ICustomizationModulesRepository</service-class>
        <service-ref>osivia:service=CustomizationService</service-ref>
    </service>

</portlet-app>
	